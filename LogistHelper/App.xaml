<Application x:Class="LogistHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LogistHelper"
             xmlns:pages="clr-namespace:LogistHelper.UI.Pages"
             xmlns:views="clr-namespace:LogistHelper.UI.Views"
             xmlns:pagesVM="clr-namespace:LogistHelper.ViewModels.Pages"
             xmlns:viewsVM="clr-namespace:LogistHelper.ViewModels.Views"
             xmlns:viewsVMBase="clr-namespace:LogistHelper.ViewModels.Base"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Templates.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate
                DataType="{x:Type pagesVM:EnterPageViewModel}">
                <pages:EnterPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:MainMenuPageViewModel}">
                <pages:MenuPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:DatabaseMenuPageViewModel}">
                <pages:MenuPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:ClientMenuPageViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate> 
            
            <DataTemplate
                DataType="{x:Type pagesVM:CarrierMenuPageViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:DriverMenuViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type pagesVM:VehicleMenuViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:ContractMenuViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type pagesVM:SecondContractMenuViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type pagesVM:CountractSubMenuViewModel}">
                <views:ContractSubMenuView/>
            </DataTemplate>



            <DataTemplate
                DataType="{x:Type viewsVM:ClientListViewModel}">
                <views:ListView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:CarrierListViewModel}">
                <views:ListView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:DriverListViewModel}">
                <views:ListView/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type viewsVM:VehicleListViewModel}">
                <views:ListView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:ContractListViewModel}">
                <views:ListView/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type viewsVM:DocumentListViewModel}">
                <views:DocumentListView/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type viewsVM:PaymentListViewModel}">
                <views:PaymentListView/>
            </DataTemplate>



            <DataTemplate
                DataType="{x:Type viewsVM:EditCarrierViewModel}">
                <views:EditView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditClientViewModel}">
                <views:EditView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditDriverViewModel}">
                <views:EditView/>
            </DataTemplate>
            
            <DataTemplate
                DataType="{x:Type viewsVM:EditVehicleViewModel}">
                <views:EditView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditContractViewModel}">
                <views:EditView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditDocumentViewModel}">
                <views:EditView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditPaymentViewModel}">
                <views:EditView/>
            </DataTemplate>


        </ResourceDictionary>
    </Application.Resources>
</Application>
