<Application x:Class="LogistHelper.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LogistHelper"
             xmlns:pages="clr-namespace:LogistHelper.UI.Pages"
             xmlns:views="clr-namespace:LogistHelper.UI.Views"
             xmlns:pagesVM="clr-namespace:LogistHelper.ViewModels.Pages"
             xmlns:viewsVM="clr-namespace:LogistHelper.ViewModels.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Brushes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Templates.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/LogistHelper;component/UI/Design/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate
                DataType="{x:Type pagesVM:EnterPageViewModel}">
                <pages:EnterPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:MenuPageViewModel}">
                <pages:MenuPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:ClientMenuPageViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate> 
            
            <DataTemplate
                DataType="{x:Type pagesVM:CarrierMenuPageViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type pagesVM:DriverMenuViewModel}">
                <pages:DataMenuPage/>
            </DataTemplate>


            <DataTemplate
                DataType="{x:Type viewsVM:ClientListViewModel}">
                <views:CompanyListView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:CarrierListViewModel}">
                <views:CompanyListView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditCarrierViewModel}">
                <views:EditCompanyView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditClientViewModel}">
                <views:EditCompanyView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:EditDriverViewModel}">
                <views:EditDriverView/>
            </DataTemplate>

            <DataTemplate
                DataType="{x:Type viewsVM:DriverListViewModel}">
                <views:DriverListView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
