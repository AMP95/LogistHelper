<UserControl x:Class="LogistHelper.UI.CustomControls.FileDropHandler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <ItemsControl
            x:Name="items">
            <ItemsControl.Template>
                <ControlTemplate>
                    <Grid
                        Margin="5">
                        <Rectangle StrokeDashArray="8 4" 
                            StrokeThickness="2"
                            RadiusX="10"
                            RadiusY="10"
                            Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=ActualWidth}"
                            Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=ActualHeight}">
                            <Rectangle.Stroke>
                                <SolidColorBrush
                                    Color="{StaticResource NeutralOne}"
                                    Opacity="0.5"/>
                            </Rectangle.Stroke>
                        </Rectangle>

                        <Image
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="100"
                            Opacity="0.5"
                            Source="/UI/Icons/addoc_icon.png"/>

                        <ScrollViewer
                            Style="{StaticResource CustomScroll}"
                            HorizontalScrollBarVisibility="Disabled">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid
                        Width="100"
                        Height="150"
                        Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition
                                Height="auto"/>
                        </Grid.RowDefinitions>

                        <Image
                            Stretch="UniformToFill"
                            Source="{Binding Thumbnail}"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                        <TextBlock
                            Style="{StaticResource MiniText}"
                            TextWrapping="NoWrap"
                            Text="{Binding Name}"/>

                        <Grid
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button
                                Width="25"
                                Height="25"
                                Style="{StaticResource IconButton}">
                                <Image
                                    Source="/UI/download_icon.png/"/>
                            </Button>

                            <Button
                                Grid.Column="1"
                                Width="25"
                                Height="25"
                                Style="{StaticResource IconButton}">
                                <Image
                                    Source="/UI/remove_icon.png/"/>
                            </Button>
                        </Grid>
                        
                        

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>   
    </Grid>
</UserControl>
