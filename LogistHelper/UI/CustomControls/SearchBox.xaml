<UserControl x:Class="LogistHelper.UI.CustomControls.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             mc:Ignorable="d" 
             PreviewKeyUp="UserControl_PreviewKeyUp"
             d:DesignHeight="60" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition
                Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock
            x:Name="watermarkText"
            TextWrapping="NoWrap"
            Foreground="{StaticResource SemiDarkBrush}"
            Style="{StaticResource DefaultText}"
            Margin="12 0"
            IsEnabled="False"
            Focusable="False"
            Text="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=WatermarkText}"/>

        <TextBox
            x:Name="searchText"
            Height="40"
            PreviewMouseLeftButtonUp="searchText_MouseLeftButtonUp"
            Style="{StaticResource MainLeftTextBox}">
            <TextBox.Text>
                <Binding Path="SearchText" 
                         RelativeSource="{RelativeSource AncestorType=local:SearchBox}" 
                         UpdateSourceTrigger="PropertyChanged" 
                         NotifyOnValidationError="True"
                         Mode="TwoWay">
                    <Binding.ValidationRules>
                        <rules:EmptyStringValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        

        <Popup
            x:Name="popuplist"
            AllowsTransparency="True"
            StaysOpen="False"
            Closed="popuplist_Closed"
            Width="{Binding ElementName=searchText, Path=ActualWidth}"
            PlacementTarget="{Binding ElementName=searchText}"
            Placement="Bottom"
            VerticalOffset="3"
            MaxHeight="150">
            <Border
                Background="{StaticResource LightBrush}"
                BorderBrush="{StaticResource BorderGradient}" 
                CornerRadius="5"
                Margin="0 3"
                BorderThickness="2">
                <Border
                    Padding="0 3"
                    CornerRadius="4"
                    Background="{StaticResource LightBlueBrush}">

                    <Grid>
                        <TextBlock
                            x:Name="emptyText"
                            Style="{StaticResource HeaderThreeText}"
                            Foreground="{StaticResource SemiDarkBrush}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="Не найдено"/>

                        <ListBox
                            x:Name="searchList"
                            VerticalAlignment="Center"
                            PreviewMouseLeftButtonUp="searchList_PreviewMouseLeftButtonUp"
                            Style="{StaticResource CustomListBox}"
                            ItemTemplate="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=ItemTemplate}"
                            ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=SearchList}"/>
                    </Grid>

                </Border>
            </Border>
        </Popup>

        <Button
            Grid.Column="2"
            PreviewMouseLeftButtonUp="Button_PreviewMouseLeftButtonUp"
            Command="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=SearchCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=SearchText}">
            <Image
                Source="/UI/Icons/search_icon.png"/>

            <Button.Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButton}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=IsButtonVisible}" Value="True">
                            <Setter Property="Button.Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=local:SearchBox}, Path=IsButtonVisible}" Value="False">
                            <Setter Property="Button.Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
