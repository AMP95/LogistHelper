<UserControl x:Class="LogistHelper.UI.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Pages"
             xmlns:views="clr-namespace:LogistHelper.UI.Views"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             xmlns:converters="clr-namespace:LogistHelper.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

    <UserControl.Resources>
        <converters:PhoneConverter x:Key="PhoneConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <views:NavigationBack
            HorizontalAlignment="Right"/>

        <ScrollViewer
            Grid.Row="1"
            Style="{StaticResource CustomScroll}"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            
            <Grid
                MaxWidth="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <WrapPanel
                    HorizontalAlignment="Center">

                    <RadioButton
                        IsChecked="True"
                        x:Name="apiButton"
                        MinWidth="100"
                        Width="120"
                        IsThreeState="False"
                        Style="{StaticResource ActiveToggle}"
                        Content="Настройки сервисов"/>

                    <RadioButton
                        
                        x:Name="mailButton"
                        Grid.Column="2"
                        MinWidth="100"
                        Width="120"
                        IsThreeState="False"
                        Style="{StaticResource ActiveToggle}"
                        Content="Настройки отправки"/>
                    
                </WrapPanel>

                <Border
                        Grid.Row="1"
                        CornerRadius="5"
                        BorderThickness="2"
                        BorderBrush="{StaticResource BorderGradient}"
                        Margin="5 0 5 5"
                        Padding="5">

                    <Border.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=apiButton, Path=IsChecked}" Value="False">
                                    <Setter Property="Border.Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>


                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                    Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock
                                Style="{StaticResource DefaultText}"
                                Text="URL сервера: "/>

                        <TextBox
                                Grid.Column="1"
                                Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="ServerUri">
                                    <Binding.ValidationRules>
                                        <rules:EmptyStringValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                                Grid.Row="1"
                                Width="120"
                                Style="{StaticResource DefaultText}"
                                Text="Ключ Yandex Геосаджест: "/>

                        <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="YandexGeoSuggestApiKey">
                                    <Binding.ValidationRules>
                                        <rules:EmptyStringValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                                Grid.Row="2"
                                Style="{StaticResource DefaultText}"
                                Text="Ключ DaData: "/>

                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="DaDataApiKey">
                                    <Binding.ValidationRules>
                                        <rules:EmptyStringValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <Grid
                                Grid.Row="3"
                                Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button
                                Content="Отмена"
                                Command="{Binding CancelApiSettingCommad}"
                                Style="{StaticResource CancelButton}"/>

                            <Button
                                Grid.Column="1"
                                Content="Сохранить"
                                Command="{Binding SaveApiSettingCommad}"
                                Style="{StaticResource NeutralButton}"/>
                        </Grid>


                    </Grid>


                </Border>

                <Border
                    Grid.Row="1"
                    CornerRadius="5"
                    BorderThickness="2"
                    BorderBrush="{StaticResource BorderGradient}"
                    Margin="5 0 5 5"
                    Padding="5">

                    <Border.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=mailButton, Path=IsChecked}" Value="False">
                                    <Setter Property="Border.Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="Email адрес: "/>

                        <TextBox
                            Grid.Column="1"
                            Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="FromAddress">
                                    <Binding.ValidationRules>
                                        <rules:EmailValudationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="1"
                            Style="{StaticResource DefaultText}"
                            Text="Имя: "/>

                        <TextBox
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="FromName">
                                    <Binding.ValidationRules>
                                        <rules:EmptyStringValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="2"
                            Width="120"
                            Style="{StaticResource DefaultText}"
                            Text="Пароль: "/>

                        <TextBox
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="Password">
                                    <Binding.ValidationRules>
                                        <rules:EmptyStringValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>

                        <TextBlock
                            Grid.Row="3"
                            Style="{StaticResource DefaultText}"
                            Text="Сервер: "/>

                        <TextBox
                            Grid.Row="3"
                            Grid.Column="1"
                            Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="Server">
                                    <Binding.ValidationRules>
                                        <rules:EmptyStringValidationRule/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        
                        <TextBlock
                            Grid.Row="4"
                            Style="{StaticResource DefaultText}"
                            Text="Порт: "/>

                        <TextBox
                            Grid.Row="4"
                            Grid.Column="1"
                            Style="{StaticResource SubCentralTextBox}">
                            <TextBox.Text>
                                <Binding Path="Port">
                                    <Binding.ValidationRules>
                                        <rules:NumberValidationRule IsRequired="True" Min="0" Max="100000"/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                   
                        <Grid
                            Grid.Row="5"
                            Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Button
                                Content="Отмена"
                                Command="{Binding CancelMailSettingCommad}"
                                Style="{StaticResource CancelButton}"/>

                            <Button
                                Grid.Column="1"
                                Content="Сохранить"
                                Command="{Binding SaveMailSettingCommad}"
                                Style="{StaticResource NeutralButton}"/>
                        </Grid>

                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
