<UserControl x:Class="LogistHelper.UI.Views.CarrierListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:pages="clr-namespace:LogistHelper.UI.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <local:NavigationBack
            HorizontalAlignment="Right"
            Grid.ColumnSpan="3"
            DataContext="{Binding RelativeSource={RelativeSource AncestorType=pages:CarrierMenuPage}, Path=DataContext}"/>

        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto"/>
                <RowDefinition/>
                <RowDefinition
                    Height="auto"/>
            </Grid.RowDefinitions>

            <Grid
                Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition
                        Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBox
                    Style="{StaticResource SubCentralTextBox}"
                    Text="{Binding CarrierName}"/>

                <Button
                    Grid.Column="1"
                    Height="30"
                    Style="{StaticResource NeutralButton}"
                    Content="Поиск"
                    Command="{Binding FindCarrierCommand}"/>
            </Grid>

            <ItemsControl
                Grid.Row="1"
                ItemsSource="{Binding ShowedCarriers}">
                <ItemsControl.Template>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition
                                        Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Style="{StaticResource HeaderThreeText}"
                                    Text="Номер"
                                    Foreground="{StaticResource NeutralOneBrush}"/>

                                <TextBlock
                                    Grid.Column="1"
                                    Style="{StaticResource HeaderThreeText}"
                                    Foreground="{StaticResource NeutralOneBrush}"
                                    Text="Название"/>

                                <TextBlock
                                    Grid.Column="2"
                                    Style="{StaticResource HeaderThreeText}"
                                    Foreground="{StaticResource NeutralOneBrush}"
                                    Text="ИНН/КПП"/>

                                <TextBlock
                                    Grid.Column="3"
                                    Style="{StaticResource HeaderThreeText}"
                                    Foreground="{StaticResource NeutralOneBrush}"
                                    Text="НДС"/>

                                <Button
                                    Grid.Column="4"
                                    Style="{StaticResource IconButton}"
                                    HorizontalAlignment="Right"
                                    Content="Add"
                                    Command="{Binding AddCarrierCommand}"/>
                            </Grid>

                            

                            <ScrollViewer
                                Grid.Row="1"
                                HorizontalScrollBarVisibility="Disabled"
                                Style="{StaticResource CustomScroll}">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Grid>
                    </ControlTemplate>
                </ItemsControl.Template>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition
                                    Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Style="{StaticResource MiniText}"
                                TextAlignment="Center"
                                Text="{Binding Number}"/>

                            <TextBlock
                                Grid.Column="1"
                                Style="{StaticResource MiniText}"
                                TextAlignment="Center"
                                Text="{Binding Name}"/>

                            <TextBlock
                                Grid.Column="2"
                                Style="{StaticResource MiniText}"
                                TextAlignment="Center"
                                Text="{Binding InnKpp}"/>

                            <TextBlock
                                Grid.Column="3"
                                Style="{StaticResource MiniText}"
                                TextAlignment="Center"
                                Text="{Binding VAT}"/>
                            
                            <Button
                                Grid.Column="4"
                                Style="{StaticResource IconButton}"
                                Content="Реда"
                                Command="{Binding EditCerrierCommand}"
                                CommandParameter="{Binding Id}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid
                Grid.Row="2"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button
                    Style="{StaticResource IconButton}"
                    Command="{Binding BackwardCommand}"
                    Content="Back"/>

                <Button
                    Grid.Column="1"
                    Style="{StaticResource IconButton}"
                    Command="{Binding ForwardCommand}"
                    Content="Forw"/>
            </Grid>

        </Grid>

    </Grid>
</UserControl>
