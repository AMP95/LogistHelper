<UserControl x:Class="LogistHelper.UI.Views.ContractListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:models="clr-namespace:LogistHelper.Models"
             xmlns:dtos="clr-namespace:DTOs;assembly=DTOs"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:behaviours="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:pages="clr-namespace:LogistHelper.UI.Pages"
             xmlns:converters="clr-namespace:LogistHelper.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>

        <ObjectDataProvider 
            x:Key="searchProp" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:ContractFilterProperty"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        
        <ObjectDataProvider 
             x:Key="status" 
             MethodName="GetValues"
             ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:ContractStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <local:NavigationBack
            HorizontalAlignment="Right"
            DataContext="{Binding RelativeSource={RelativeSource AncestorType=pages:DataMenuPage}, Path=DataContext}"/>

        <Grid
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto"/>
                <RowDefinition/>
                <RowDefinition
                    Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Foreground="{StaticResource NeutralOneBrush}"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Фильтр:"/>

                <ComboBox
                    Grid.Column="1"
                    Height="40"
                    Width="200"
                    ItemsSource="{Binding Source={StaticResource searchProp}}"
                    SelectedItem="{Binding SelectedSearchProperty}"
                    Style="{StaticResource CustomComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Style="{StaticResource DefaultText}"
                                Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Grid
                    Width="200"
                    Grid.Column="2">

                    <controls:CustomDatePicker
                        StartDate="{Binding StartDate}"
                        EndDate="{Binding EndDate}">
                        <controls:CustomDatePicker.Style>
                            <Style>
                                <Setter Property="controls:CustomDatePicker.Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding SelectedSearchProperty}" Value="{x:Static  dtos:ContractFilterProperty.Date}">
                                        <Setter Property="controls:CustomDatePicker.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </controls:CustomDatePicker.Style>

                        <behaviours:Interaction.Triggers>
                            <behaviours:EventTrigger EventName="SelectedDateChanged">
                                <behaviours:InvokeCommandAction
                                     Command="{Binding SelectRangeCommand}"
                                     CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DatePicker}, Path=Calendar.se}"/>
                            </behaviours:EventTrigger>
                        </behaviours:Interaction.Triggers>
                    </controls:CustomDatePicker>

                    <TextBox
                        Text="{Binding TextSearchString}">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MainCentralTextBox}">
                                <Setter Property="TextBox.Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding SelectedSearchProperty}" Value="{x:Static dtos:ContractFilterProperty.Route}">
                                        <Setter Property="TextBox.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <ComboBox
                        ItemsSource="{Binding Source={StaticResource status}}"
                        SelectedItem="{Binding SelectedStatus}"
                        Height="40">
                        <ComboBox.Style>
                            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource CustomComboBox}">
                                <Setter Property="ComboBox.Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding SelectedSearchProperty}" Value="{x:Static dtos:ContractFilterProperty.Status}">
                                        <Setter Property="ComboBox.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Style="{StaticResource DefaultText}"
                                    Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <controls:SearchBox
                        SearchList="{Binding SearchResults}"
                        SelectedSearch="{Binding SelectedSearch}"
                        DisplayMemberPath="Name"
                        IsDynamicSearch="True">
                        <controls:SearchBox.Style>
                            <Style>
                                <Setter Property="controls:SearchBox.Visibility" Value="Hidden"/>
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding SelectedSearchProperty}" Value="{x:Static dtos:ContractFilterProperty.Carrier}">
                                        <Setter Property="controls:SearchBox.Visibility" Value="Visible"/>
                                        <Setter Property="controls:SearchBox.SearchCommand" Value="{Binding SearchCarrierCommand}"/>
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding SelectedSearchProperty}" Value="{x:Static dtos:ContractFilterProperty.Driver}">
                                        <Setter Property="controls:SearchBox.Visibility" Value="Visible"/>
                                        <Setter Property="controls:SearchBox.SearchCommand" Value="{Binding SearchDriverCommand}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </controls:SearchBox.Style>
                    </controls:SearchBox>

                </Grid>

                <Button
                    Grid.Column="3"
                    Height="40"
                    Style="{StaticResource NeutralButton}"
                    Command="{Binding FiltrateCommand}"
                    Content="Применить"/>
            </Grid>

            <ItemsControl
                Grid.Row="1"
                ItemsSource="{Binding List}">

                <ItemsControl.Template>
                    <ControlTemplate>

                        <ScrollViewer
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            Style="{StaticResource CustomScroll}">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid
                                    Margin="0 0 12 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="100"/>
                                        <ColumnDefinition
                                            Width="100"/>
                                        <ColumnDefinition
                                            Width="100"/>
                                        <ColumnDefinition
                                            Width="100"/>
                                        <ColumnDefinition
                                             Width="100"/>
                                        <ColumnDefinition
                                            Width="100"/>
                                        <ColumnDefinition
                                            Width="200"/>
                                        <ColumnDefinition
                                            Width="250"/>
                                        <ColumnDefinition
                                            Width="250"/>
                                        <ColumnDefinition
                                            Width="250"/>
                                        <ColumnDefinition
                                            Width="250"/>
                                        <ColumnDefinition
                                            Width="120"/>
                                        <ColumnDefinition
                                            Width="120"/>
                                        <ColumnDefinition
                                            Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <Button
                                        Style="{StaticResource IconButton}"
                                        ToolTip="Новая заявка"
                                        Command="{Binding AddCommand}">
                                        <Image
                                            Source="/UI/Icons/add_icon.png"/>
                                    </Button>

                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Статус"/>

                                    <TextBlock
                                         Grid.Column="2"
                                         Style="{StaticResource HeaderThreeText}"
                                         Foreground="{StaticResource NeutralOneBrush}"
                                         Text="НДС"/>

                                    <TextBlock
                                        Grid.Column="3"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Логист"/>

                                    <TextBlock
                                        Grid.Column="4"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Номер"/>

                                    <TextBlock
                                        Grid.Column="5"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Дата"/>

                                    <TextBlock
                                        Grid.Column="6"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Маршрут"/>

                                    <TextBlock
                                        Grid.Column="7"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Заказчик"/>

                                    <TextBlock
                                        Grid.Column="8"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Перевозчик"/>

                                    <TextBlock
                                        Grid.Column="9"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Водитель"/>

                                    <TextBlock
                                        Grid.Column="10"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="ТС"/>

                                    <TextBlock
                                        Grid.Column="11"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Оплата перевозчику"/>

                                    <TextBlock
                                        Grid.Column="12"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Предоплата перевозчику"/>

                                    <TextBlock
                                        Grid.Column="13"
                                        Style="{StaticResource HeaderThreeText}"
                                        Foreground="{StaticResource NeutralOneBrush}"
                                        Text="Оплата заказчика"/>

                                </Grid>

                                <ItemsPresenter
                                    Grid.Row="1"/>
                            </Grid>
                        </ScrollViewer>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="50"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="200"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="120"/>
                                <ColumnDefinition
                                    Width="120"/>
                                <ColumnDefinition
                                    Width="120"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel
                                Orientation="Horizontal">

                                <Button
                                    ToolTip="Редактировать"
                                    Style="{StaticResource IconButton}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:ContractListView}, Path=DataContext.EditCommand}"
                                    CommandParameter="{Binding Id}">
                                    <Image
                                        Source="/UI/Icons/edit_icon.png"/>
                                </Button>

                                <Button
                                    ToolTip="Добавить документы"
                                    Style="{StaticResource IconButton}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:ContractListView}, Path=DataContext.AddDocumentCommand}"
                                    CommandParameter="{Binding Id}">
                                    <Image
                                        Source="/UI/Icons/addoc_icon.png"/>
                                </Button>

                            </StackPanel>

                            <Grid
                                Grid.Column="1">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static dtos:ContractStatus.Created}">
                                                    <Setter Property="Image.Source" Value="/UI/Icons/new_icon.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static dtos:ContractStatus.DocumentsRecieved}">
                                                    <Setter Property="Image.Source" Value="/UI/Icons/recieve_icon.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static dtos:ContractStatus.DocumentSended}">
                                                    <Setter Property="Image.Source" Value="/UI/Icons/send_icon.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static dtos:ContractStatus.Closed}">
                                                    <Setter Property="Image.Source" Value="/UI/Icons/done_icon.png"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static dtos:ContractStatus.Failed}">
                                                    <Setter Property="Image.Source" Value="/UI/Icons/fail_icon.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <Button
                                    ToolTip="Срыв"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:ContractListView}, Path=DataContext.AddDocumentCommand}"
                                    CommandParameter="{Binding Id}">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButton}">
                                            <Setter Property="Button.Visibility" Value="Hidden"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static dtos:ContractStatus.Created}">
                                                    <Setter Property="Button.Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <TextBlock
                                Grid.Column="2"
                                TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DefaultText}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Vat}" Value="{x:Static dtos:VAT.With}">
                                                <Setter Property="TextBlock.Text" Value="НДС"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="3"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="ЛГСТ"/>

                            <TextBlock
                                Grid.Column="4"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Number}"/>

                            <TextBlock
                                Grid.Column="5"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding CreationDate}"/>

                            <TextBlock
                                Grid.Column="6"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Route}"/>

                            <TextBlock
                                Grid.Column="7"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Client.Name}"/>

                            <TextBlock
                                Grid.Column="8"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Carrier.Name}"/>

                            <TextBlock
                                Grid.Column="9"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Driver.Name}"/>

                            <TextBlock
                                Grid.Column="10"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center">
                                <Run Text="{Binding Vehicle.TruckModel}"/>
                                <Run Text="{Binding Vehicle.TruckNumber}"/>
                                <Run Text=","/>
                                <Run Text="{Binding Vehicle.TrailerNumber}"/>
                            </TextBlock>

                            <TextBlock
                                Grid.Column="11"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Payment}"/>

                            <TextBlock
                                Grid.Column="12"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding Prepayment}"/>

                            <TextBlock
                                Grid.Column="13"
                                Style="{StaticResource DefaultText}"
                                TextAlignment="Center"
                                Text="{Binding ClientPayment}"/>

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </Grid>

        <local:BlockView
            Grid.RowSpan="2"/>

    </Grid>

</UserControl>
