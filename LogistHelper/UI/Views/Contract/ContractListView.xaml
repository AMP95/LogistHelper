<UserControl x:Class="LogistHelper.UI.Views.ContractListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:models="clr-namespace:LogistHelper.Models"
             xmlns:dtos="clr-namespace:DTOs;assembly=DTOs"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:behaviours="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider 
            x:Key="searchProp" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:ContractSearchProperty"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        
        <ObjectDataProvider 
             x:Key="status" 
             MethodName="GetValues"
             ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:ContractStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="auto"/>
            <RowDefinition/>
            <RowDefinition
                Height="auto"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Foreground="{StaticResource NeutralOneBrush}"
                Style="{StaticResource HeaderTwoText}"
                Text="Фильтр:"/>

            <ComboBox
                Grid.Column="1"
                Height="40"
                Width="200"
                ItemsSource="{Binding Source={StaticResource searchProp}}"
                SelectedItem="{Binding SelectedSearchProperty}"
                Style="{StaticResource CustomComboBox}"/>

            <Grid
                Width="200"
                Grid.Column="2">

                <DatePicker
                    Visibility="Hidden"
                    CalendarStyle="{StaticResource CustomCalendarSingleRange}">
                    <DatePicker.Style>
                        <Style TargetType="{x:Type DatePicker}" BasedOn="{StaticResource CustomDatePicker}">
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedSearchProperty}" Value="{x:Static models:ContractSearchProperty.Date}">
                                    <Setter Property="DatePicker.Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DatePicker.Style>

                    <behaviours:Interaction.Triggers>
                        <behaviours:EventTrigger EventName="SelectedDateChanged">
                            <behaviours:InvokeCommandAction
                                Command="{Binding SelectRangeCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DatePicker}, Path=Calendar.se}"/>
                        </behaviours:EventTrigger>
                    </behaviours:Interaction.Triggers>
                </DatePicker>

                <TextBox
                    Visibility="Hidden">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MainCentralTextBox}">
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedSearchProperty}" Value="{x:Static models:ContractSearchProperty.Route}">
                                    <Setter Property="TextBox.Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ComboBox
                    Visibility="Hidden"
                    ItemsSource="{Binding Source={StaticResource status}}"
                    Height="40">
                    <ComboBox.Style>
                        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource CustomComboBox}">
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedSearchProperty}" Value="{x:Static models:ContractSearchProperty.Status}">
                                    <Setter Property="ComboBox.Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>

                <controls:SearchBox
                    Visibility="Hidden"
                    IsDynamicSearch="True">
                    <controls:SearchBox.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedSearchProperty}" Value="{x:Static models:ContractSearchProperty.Client}">
                                    <Setter Property="controls:SearchBox.Visibility" Value="Visible"/>
                                    <Setter Property="controls:SearchBox.SearchCommand" Value="{Binding SsearchClientCommand}"/>
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding SelectedSearchProperty}" Value="{x:Static models:ContractSearchProperty.Carrier}">
                                    <Setter Property="controls:SearchBox.Visibility" Value="Visible"/>
                                    <Setter Property="controls:SearchBox.SearchCommand" Value="{Binding SearchCarrierCommand}"/>
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding SelectedSearchProperty}" Value="{x:Static models:ContractSearchProperty.Driver}">
                                    <Setter Property="controls:SearchBox.Visibility" Value="Visible"/>
                                    <Setter Property="controls:SearchBox.SearchCommand" Value="{Binding SearchDriverCommand}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:SearchBox.Style>
                </controls:SearchBox>

            </Grid>

            <Button
                Grid.Column="3"
                Height="40"
                Style="{StaticResource NeutralButton}"
                Content="Применить"/>
        </Grid>
        
        <ItemsControl
            Grid.Row="1"
            ItemsSource="{Binding List}">
            
            <ItemsControl.Template>
            <ControlTemplate>

                <ScrollViewer
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Visible"
                        Style="{StaticResource CustomScroll}">
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid
                            Margin="0 0 12 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="50"/>
                                <ColumnDefinition
                                    Width="50"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition
                                    Width="200"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="250"/>
                                <ColumnDefinition
                                    Width="120"/>
                                <ColumnDefinition
                                    Width="120"/>
                                <ColumnDefinition
                                    Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Button
                                Style="{StaticResource IconButton}"
                                ToolTip="Редактировать">
                                <Image
                                    Source="/UI/Icons/edit_icon.png/"/>
                            </Button>

                            <TextBlock
                                Grid.Column="1"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Статус"/>

                            <TextBlock
                                Grid.Column="2"
                                Style="{StaticResource HeaderThreeText}"
                                Text="№"
                                Foreground="{StaticResource NeutralOneBrush}"/>

                            <TextBlock
                                Grid.Column="3"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="НДС"/>

                            <TextBlock
                                Grid.Column="4"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Логист"/>

                            <TextBlock
                                Grid.Column="5"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Номер"/>

                            <TextBlock
                                Grid.Column="6"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Дата"/>

                            <TextBlock
                                Grid.Column="7"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Маршрут"/>

                            <TextBlock
                                Grid.Column="8"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Заказчик"/>

                            <TextBlock
                                Grid.Column="9"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Перевозчик"/>

                            <TextBlock
                                Grid.Column="10"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Водитель"/>

                            <TextBlock
                                Grid.Column="11"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="ТС"/>

                            <TextBlock
                                Grid.Column="12"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Оплата перевозчику"/>

                            <TextBlock
                                Grid.Column="13"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Предоплата перевозчику"/>

                            <TextBlock
                                Grid.Column="14"
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Оплата заказчика"/>

                        </Grid>
                        
                        <ItemsPresenter
                            Grid.Row="1"/>
                </Grid>
                    </ScrollViewer>
            </ControlTemplate>
        </ItemsControl.Template>

            <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="50"/>
                        <ColumnDefinition
                            Width="50"/>
                        <ColumnDefinition
                            Width="100"/>
                        <ColumnDefinition
                            Width="100"/>
                        <ColumnDefinition
                            Width="100"/>
                        <ColumnDefinition
                            Width="100"/>
                        <ColumnDefinition
                            Width="100"/>
                        <ColumnDefinition
                            Width="200"/>
                        <ColumnDefinition
                            Width="250"/>
                        <ColumnDefinition
                            Width="250"/>
                        <ColumnDefinition
                            Width="250"/>
                        <ColumnDefinition
                            Width="250"/>
                        <ColumnDefinition
                            Width="120"/>
                        <ColumnDefinition
                            Width="120"/>
                        <ColumnDefinition
                            Width="120"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Style="{StaticResource DefaultText}"
                        TextAlignment="Center"
                        Text="{Binding Counter}"/>

                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource DefaultText}"
                        TextAlignment="Center"
                        Text="{Binding Name}"/>

                    <TextBlock
                        Grid.Column="2"
                        Style="{StaticResource DefaultText}"
                        TextAlignment="Center">
                        <Run Text="{Binding Vehicle.TruckModel}"/>
                        <Run Text="{Binding Vehicle.TruckNumber}"/>
                    </TextBlock>

                    <TextBlock
                        Grid.Column="3"
                        Style="{StaticResource DefaultText}"
                        TextAlignment="Center">
                        <Run Text="{Binding Vehicle.TrailerModel}"/>
                        <Run Text="{Binding Vehicle.TrailerNumber}"/>
                    </TextBlock>

                    <TextBlock
                        Grid.Column="4"
                        Style="{StaticResource DefaultText}"
                        TextAlignment="Center"
                        Text="{Binding Carrier.Name}"/>

                    <Button
                        Grid.Column="5"
                        ToolTip="Редактировать"
                        Style="{StaticResource IconButton}"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=local:DriverListView}, Path=DataContext.EditCommand}"
                        CommandParameter="{Binding Id}">
                        <Image
                        Source="/UI/Icons/edit_icon.png"/>
                    </Button>

                    <Button
                        Grid.Column="6"
                        ToolTip="Удалить"
                        Style="{StaticResource IconButton}"
                        Command="{Binding RelativeSource={RelativeSource AncestorType=local:DriverListView}, Path=DataContext.DeleteCommand}"
                        CommandParameter="{Binding Id}">
                        <Image
                        Source="/UI/Icons/remove_icon.png"/>
                    </Button>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
            
        </ItemsControl>

        <Grid
            Grid.Row="2">
            <TextBlock
                HorizontalAlignment="Left"
                Foreground="{StaticResource NeutralOneBrush}"
                Style="{StaticResource HeaderTwoText}"
                Text="Итог:"/>
        </Grid>
    </Grid>
</UserControl>
