<UserControl x:Class="LogistHelper.UI.Views.ContractSubMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:pages="clr-namespace:LogistHelper.UI.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1.5*"/>
            <ColumnDefinition
                Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <local:NavigationBack
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"/>

        <pages:DataMenuPage
            Grid.Row="1"
            DataContext="{Binding DocumentSub}"/>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Width="2"
            Margin="5 0"
            Background="{StaticResource BorderGradient}"/>

        <pages:DataMenuPage
            Grid.Row="1"
            Grid.Column="2"
            DataContext="{Binding PaymentSub}"/>

        
    </Grid>
</UserControl>
