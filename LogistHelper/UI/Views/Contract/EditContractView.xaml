<UserControl x:Class="LogistHelper.UI.Views.EditContractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:LogistHelper.UI.Converters"
             xmlns:dtos="clr-namespace:DTOs;assembly=DTOs"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1500">

    <UserControl.Resources>
        <ObjectDataProvider 
            x:Key="payCond" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:RecievingType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider 
            x:Key="payPrior" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:PaymentPriority"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
        <converters:GuidEmptyToBoolConverter x:Key="GuidEmptyToBoolConverter"/>
    </UserControl.Resources>

    <ScrollViewer
        Style="{StaticResource CustomScroll}"
        VerticalScrollBarVisibility="Visible"
        HorizontalScrollBarVisibility="Disabled">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding EditedViewModel.Status}" Value="{x:Static dtos:ContractStatus.Failed}">
                            <Setter Property="Grid.IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <StackPanel
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            
            <TextBlock
                Style="{StaticResource HeaderTwoText}">
                <Run Text="Заявка-договор №"/>
                <Run Text="{Binding EditedViewModel.Number}"/>
                <Run Text="от"/>
                <Run Text="{Binding EditedViewModel.CreationDate, StringFormat='dd.MM.yyyy'}"/>
            </TextBlock>
            
            <Button
                ToolTip="Скачать файл заявки"
                Command="{Binding RelativeSource={RelativeSource AncestorType=local:EditContractView}, Path=DataContext.DownloadFileCommand}">
                <Image
                    Source="/UI/Icons/download_icon.png"/>

                <Button.Style>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource IconButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding File}" Value="{x:Null}">
                                <Setter Property="Button.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

            <Grid
                Grid.Row="1"
                Grid.ColumnSpan="2"
                MaxWidth="600"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

                <TextBlock
                Style="{StaticResource DefaultText}"
                Text="Шаблон заявки:"/>

                <ComboBox
                Grid.Column="1"
                MinWidth="300"
                ItemsSource="{Binding Templates}"
                SelectedIndex="{Binding SelectedTemplateIndex, Mode=TwoWay}"
                Style="{StaticResource CustomComboBox}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            </Grid>

            <WrapPanel
                HorizontalAlignment="Center"
                Grid.Row="2"
                Grid.ColumnSpan="2">

                <StackPanel
                    Width="580"
                    Margin="10"
                    Grid.Row="2">
                
                    <TextBlock
                 Style="{StaticResource HeaderThreeText}"
                 Foreground="{StaticResource NeutralOneBrush}"
                 Text="Груз"/>
                     
                    <Grid>
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition
                         Width="auto"/>
                     <ColumnDefinition/>
                     <ColumnDefinition
                         Width="auto"/>
                     <ColumnDefinition/>
                 </Grid.ColumnDefinitions>
             
                 <TextBlock
                     Style="{StaticResource MiniText}"
                     Text="Вес, т"/>
             
                 <TextBox
                     Grid.Column="1"
                     Style="{StaticResource SubCentralTextBox}">
                     <TextBox.Text>
                         <Binding Path="EditedViewModel.Weight">
                             <Binding.ValidationRules>
                                 <rules:NumberValidationRule Min="0"/>
                             </Binding.ValidationRules>
                         </Binding>
                     </TextBox.Text>
                 </TextBox>
             
                 <TextBlock
                     Grid.Column="2"
                     Style="{StaticResource MiniText}"
                     Text="Объем, м3"/>
             
                 <TextBox
                     Grid.Column="3"
                     Style="{StaticResource SubCentralTextBox}">
                     <TextBox.Text>
                         <Binding Path="EditedViewModel.Volume">
                             <Binding.ValidationRules>
                                 <rules:NumberValidationRule Min="0"/>
                             </Binding.ValidationRules>
                         </Binding>
                     </TextBox.Text>
                 </TextBox>
             </Grid>

                    <Border
                Height="2"
                Background="{StaticResource BorderGradient}"/>

                    <TextBlock
                Style="{StaticResource HeaderThreeText}"
                Foreground="{StaticResource NeutralOneBrush}"
                Text="Загрузка"/>

                    <local:RoutePointView
                DataContext="{Binding EditedViewModel.LoadPoint}"/>

                    <Border
                Height="2"
                Background="{StaticResource BorderGradient}"/>

                    <ItemsControl
                MaxHeight="400"
                ItemsSource="{Binding EditedViewModel.UnloadPoints}">

                <ItemsControl.Template>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock
                                Style="{StaticResource HeaderThreeText}"
                                Foreground="{StaticResource NeutralOneBrush}"
                                Text="Выгрузки"/>

                            <Button
                                Margin="5 5 14 5"
                                ToolTip="Добавить выгрузку"
                                Style="{StaticResource IconButton}"
                                HorizontalAlignment="Right"
                                Command="{Binding EditedViewModel.AddUnloadCommand}">
                                <Image
                                    Source="/UI/Icons/add_icon.png"/>
                            </Button>

                            <ScrollViewer
                                Grid.Row="1"
                                Style="{StaticResource CustomScroll}"
                                HorizontalScrollBarVisibility="Disabled">
                                <ItemsPresenter
                                    Grid.Row="1"/>
                            </ScrollViewer>


                        </Grid>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Border
                            BorderBrush="{StaticResource BorderGradient}"
                            BorderThickness="2"
                            CornerRadius="5"
                            Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition
                                        Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <local:RoutePointView
                                    DataContext="{Binding Item}"/>

                                <Button
                                    Grid.Column="1"
                                    VerticalAlignment="Top"
                                    ToolTip="Удалить выгрузку"
                                    Style="{StaticResource IconButton}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:EditContractView}, Path=DataContext.EditedViewModel.DeleteUnloadCommand}"
                                    CommandParameter="{Binding Id}">
                                    <Image
                                        Source="/UI/Icons/remove_icon.png"/>
                                </Button>
                            </Grid>
                        </Border>


                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

                    <Border
                        Height="2"
                        Background="{StaticResource BorderGradient}"/>


                </StackPanel>

                <StackPanel
                    Width="580"
                    Margin="10"
                    Grid.Row="2"
                    Grid.Column="2">

                    <TextBlock
                Style="{StaticResource HeaderThreeText}"
                Foreground="{StaticResource NeutralOneBrush}"
                Text="Заказчик"/>

                    <controls:SearchBox
                WatermarkText="Название"
                IsDynamicSearch="True"
                IsButtonVisible="False"
                SearchList="{Binding Clients, Mode=TwoWay}"
                SearchCommand="{Binding SearchClientCommand}"
                DisplayMemberPath="Name"
                SelectedSearch="{Binding EditedViewModel.Client, Mode=TwoWay}">
                <controls:SearchBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Name}"/>
                    </DataTemplate>
                </controls:SearchBox.ItemTemplate>
            </controls:SearchBox>

                    <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    MaxWidth="120"
                    Style="{StaticResource MiniText}"
                    Text="Стоимость услуг, руб:"/>

                <TextBox
                    Grid.Column="1"
                    Style="{StaticResource MainCentralTextBox}">
                    <TextBox.Text>
                        <Binding Path="EditedViewModel.ClientPayment" StringFormat="n0" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <rules:NumberValidationRule Min="0" IsRequired="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </Grid>

                    <Border
                Height="2"
                Background="{StaticResource BorderGradient}"/>

                    <TextBlock
                Style="{StaticResource HeaderThreeText}"
                Foreground="{StaticResource NeutralOneBrush}"
                Text="Исполнитель"/>

                    <TextBlock
                Style="{StaticResource DefaultText}">
                <Run Text="Перевозчик: " FontWeight="Light"/>
                <Run Text="{Binding EditedViewModel.Carrier.Name}"/>
                <Run Text=" "/>
                <Run Foreground="{StaticResource DenyBrush}">
                <Run.Style>
                    <Style>
                        <Setter Property="Run.Text" Value="{Binding EditedViewModel.Carrier.Vat, Converter={StaticResource EnumToDescriptionConverter}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EditedViewModel.Carrier.Name}" Value="{x:Null}">
                                <Setter Property="Run.Text" Value=""/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Run.Style>
            </Run>
        </TextBlock>

                    <controls:SearchBox
                WatermarkText="Водитель"
                IsDynamicSearch="True"
                IsButtonVisible="False"
                SearchList="{Binding Drivers, Mode=TwoWay}"
                SearchCommand="{Binding SearchDriverCommand}"
                DisplayMemberPath="Name"
                SelectedSearch="{Binding SelectedDriver, Mode=TwoWay}">
                <controls:SearchBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource DefaultText}"
                                Text="{Binding Name}"/>

                            <TextBlock
                                Style="{StaticResource MiniText}">
                                <Run Text="{Binding Carrier.Name}"/>
                                <Run Text=","/>
                                <Run Text="{Binding Carrier.Vat, Converter={StaticResource EnumToDescriptionConverter}}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </controls:SearchBox.ItemTemplate>
            </controls:SearchBox>

                    <TextBlock
            Style="{StaticResource MiniText}"
            Text="ТС:"/>

                    <ComboBox
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource CustomComboBox}"
                ItemsSource="{Binding Vehicles}"
                SelectedIndex="{Binding SelectedVehicleIndex, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                        Style="{StaticResource DefaultText}">
                        <Run Text="{Binding TruckModel}"/>
                        <Run Text="{Binding TruckNumber}"/>
                        <Run Text=","/>
                        <Run Text="{Binding TrailerNumber}"/>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

                    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                MaxWidth="120"
                Style="{StaticResource MiniText}"
                Text="Стоимость услуг, руб:"/>

            <TextBox
                Grid.Column="1"
                Style="{StaticResource MainCentralTextBox}">
                <TextBox.Text>
                    <Binding Path="EditedViewModel.Payment" StringFormat="n0" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <rules:NumberValidationRule Min="0" IsRequired="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBlock
                Grid.Row="1"
                MaxWidth="120"
                Style="{StaticResource MiniText}"
                Text="Предоплата, руб:"/>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource SubCentralTextBox}">
                <TextBox.Text>
                        <Binding Path="EditedViewModel.Prepayment" StringFormat="n0" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <rules:NumberValidationRule Min="0" IsRequired="False"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBlock
                Grid.Row="2"
                Style="{StaticResource MiniText}"
                Text="Условия оплаты:"/>

            <ComboBox
                Grid.Row="2"
                Grid.Column="1"
                Height="40"
                ItemsSource="{Binding Source={StaticResource payCond}}"
                SelectedItem="{Binding EditedViewModel.PaymentCondition}"
                Style="{StaticResource CustomComboBox}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Grid.Row="3"
                Style="{StaticResource MiniText}"
                Text="Срок оплаты:"/>

                <ComboBox
                Grid.Row="3"
                Grid.Column="1"
                Height="40"
                ItemsSource="{Binding Source={StaticResource payPrior}}"
                SelectedItem="{Binding EditedViewModel.PayPriority}"
                Style="{StaticResource CustomComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>
            
                </StackPanel>

            </WrapPanel>

            <Grid
            Grid.ColumnSpan="3"
            Grid.Row="3"
            HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <CheckBox
                Style="{StaticResource CustomCheck}"
                IsChecked="{Binding Print, Mode=TwoWay}"
                Content="Печать"/>

            <CheckBox
                Grid.Column="1"
                Style="{StaticResource CustomCheck}"
                IsChecked="{Binding Send, Mode=TwoWay}"
                Content="Отправить"/>
        </Grid>
        
        </Grid>
    </ScrollViewer>

</UserControl>
