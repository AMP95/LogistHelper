<UserControl x:Class="LogistHelper.UI.Views.EditContractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:LogistHelper.UI.Converters"
             xmlns:dtos="clr-namespace:DTOs;assembly=DTOs"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">

    <UserControl.Resources>
        <ObjectDataProvider 
            x:Key="payCond" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:RecievingType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider 
            x:Key="payPrior" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:PaymentPriority"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock
            Grid.ColumnSpan="3"
            Style="{StaticResource HeaderTwoText}">
            <Run Text="Заявка-договор №"/>
            <Run Text="{Binding EditedViewModel.Number}"/>
            <Run Text="от"/>
            <Run Text="{Binding EditedViewModel.CreationDate, StringFormat='dd.MM.yyyy'}"/>
        </TextBlock>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1">
            
            <TextBlock
                Style="{StaticResource HeaderThreeText}"
                Text="Выгрузки"/>
            
            <ItemsControl
                MaxHeight="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualHeight}"
                ItemsSource="{Binding EditedViewModel.UnloadPoints}">
            
                <ItemsControl.Template>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
            
                            <Button
                                ToolTip="Добавить выгрузку"
                                Style="{StaticResource IconButton}"
                                HorizontalAlignment="Right"
                                Command="{Binding EditedViewModel.AddUnloadCommand}">
                                <Image
                                    Source="/UI/Icons/add_icon.png"/>
                            </Button>
                            
                            <ScrollViewer
                                Grid.Row="1"
                                Style="{StaticResource CustomScroll}"
                                HorizontalScrollBarVisibility="Disabled">
                                <ItemsPresenter
                                    Grid.Row="1"/>
                            </ScrollViewer>
            
                            
                        </Grid>
                    </ControlTemplate>
                </ItemsControl.Template>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
            
                        <Border
                            BorderBrush="{StaticResource BorderGradient}"
                            BorderThickness="2"
                            CornerRadius="5"
                            Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition
                                        Width="auto"/>
                                </Grid.ColumnDefinitions>
                            
                                <local:RoutePointView
                                    DataContext="{Binding Item}"/>
                            
                                <Button
                                    Grid.Column="1"
                                    VerticalAlignment="Top"
                                    ToolTip="Удалить выгрузку"
                                    Style="{StaticResource IconButton}"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=local:EditContractView}, Path=DataContext.EditedViewModel.DeleteUnloadCommand}"
                                    CommandParameter="{Binding Id}">
                                    <Image
                                        Source="/UI/Icons/remove_icon.png"/>
                                </Button>
                            </Grid>
                        </Border>
                        
                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </StackPanel>

        <StackPanel
            Margin="10"
            Grid.Row="1"
            Grid.Column="2">
           
            

        <TextBlock
            Style="{StaticResource HeaderThreeText}"
            Text="Исполнитель"/>

        <TextBlock
            Style="{StaticResource DefaultText}">
            <Run Text="Перевозчик: "/>
            <Run Text="{Binding EditedViewModel.Carrier.Name}"/>
            <Run Text=" "/>
            <Run Foreground="{StaticResource DenyBrush}">
                <Run.Style>
                    <Style>
                        <Setter Property="Run.Text" Value="{Binding EditedViewModel.Carrier.Vat, Converter={StaticResource EnumToDescriptionConverter}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EditedViewModel.Carrier.Name}" Value="{x:Null}">
                                <Setter Property="Run.Text" Value=""/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Run.Style>
            </Run>
        </TextBlock>

        <controls:SearchBox
            WatermarkText="Водитель"
            IsDynamicSearch="True"
            IsButtonVisible="False"
            SearchList="{Binding Drivers, Mode=TwoWay}"
            SearchCommand="{Binding SearchDriverCommand}"
            DisplayMemberPath="Name"
            SelectedSearch="{Binding SelectedDriver, Mode=TwoWay}">
            <controls:SearchBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Name}"/>

                        <TextBlock
                            Style="{StaticResource MiniText}">
                            <Run Text="{Binding Carrier.Name}"/>
                            <Run Text=","/>
                            <Run Text="{Binding Carrier.Vat, Converter={StaticResource EnumToDescriptionConverter}}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </controls:SearchBox.ItemTemplate>
        </controls:SearchBox>

        <TextBlock
            Style="{StaticResource DefaultText}"
            Text="ТС:"/>

        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource CustomComboBox}"
            ItemsSource="{Binding Vehicles}"
            SelectedIndex="{Binding SelectedVehicleIndex, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Style="{StaticResource DefaultText}">
                        <Run Text="{Binding TruckModel}"/>
                        <Run Text="{Binding TruckNumber}"/>
                        <Run Text=","/>
                        <Run Text="{Binding TrailerNumber}"/>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock
            Style="{StaticResource HeaderThreeText}"
            Text="Стоимость услуг"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                MaxWidth="120"
                Style="{StaticResource DefaultText}"
                Text="Оплата перевозчику, руб:"/>

            <TextBox
                Grid.Column="1"
                Style="{StaticResource MainCentralTextBox}">
                <TextBox.Text>
                    <Binding Path="EditedViewModel.Payment">
                        <Binding.ValidationRules>
                            <rules:NumberValidationRule Min="0" IsRequired="True"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBlock
                Grid.Row="1"
                MaxWidth="120"
                Style="{StaticResource DefaultText}"
                Text="Предоплата перевозчику, руб:"/>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource SubCentralTextBox}">
                <TextBox.Text>
                    <Binding Path="EditedViewModel.Prepayment">
                        <Binding.ValidationRules>
                            <rules:NumberValidationRule Min="0" IsRequired="False"/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <TextBlock
                Grid.Row="2"
                Style="{StaticResource DefaultText}"
                Text="Условия оплаты:"/>

            <ComboBox
                Grid.Row="2"
                Grid.Column="1"
                Height="40"
                ItemsSource="{Binding Source={StaticResource payCond}}"
                SelectedItem="{Binding EditedViewModel.PaymentCondition}"
                Style="{StaticResource CustomComboBox}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Grid.Row="3"
                Style="{StaticResource DefaultText}"
                Text="Срок оплаты:"/>

            <ComboBox
                Grid.Row="3"
                Grid.Column="1"
                Height="40"
                ItemsSource="{Binding Source={StaticResource payPrior}}"
                SelectedItem="{Binding EditedViewModel.PayPriority}"
                Style="{StaticResource CustomComboBox}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                </ComboBox>

                <Border
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Bottom"
                    Background="{StaticResource BorderGradient}"
                    Height="2"/>

                <TextBlock
                    Grid.Row="4"
                    MaxWidth="120"
                    Style="{StaticResource DefaultText}"
                    Text="Оплата заказчика, руб:"/>

                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource MainCentralTextBox}">
                    <TextBox.Text>
                        <Binding Path="EditedViewModel.ClientPayment">
                            <Binding.ValidationRules>
                                <rules:NumberValidationRule Min="0" IsRequired="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

        </Grid>
    </StackPanel>

        <StackPanel
            Margin="10"
            Grid.Row="1">
            
            <TextBlock
                 Style="{StaticResource HeaderThreeText}"
                 Text="Груз"/>
             
            <Grid>
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition
                         Width="auto"/>
                     <ColumnDefinition/>
                     <ColumnDefinition
                         Width="auto"/>
                     <ColumnDefinition/>
                 </Grid.ColumnDefinitions>
             
                 <TextBlock
                     Style="{StaticResource DefaultText}"
                     Text="Вес, т"/>
             
                 <TextBox
                     Grid.Column="1"
                     Style="{StaticResource SubCentralTextBox}">
                     <TextBox.Text>
                         <Binding Path="EditedViewModel.Weight">
                             <Binding.ValidationRules>
                                 <rules:NumberValidationRule Min="0"/>
                             </Binding.ValidationRules>
                         </Binding>
                     </TextBox.Text>
                 </TextBox>
             
                 <TextBlock
                     Grid.Column="2"
                     Style="{StaticResource DefaultText}"
                     Text="Объем, м3"/>
             
                 <TextBox
                     Grid.Column="3"
                     Style="{StaticResource SubCentralTextBox}">
                     <TextBox.Text>
                         <Binding Path="EditedViewModel.Volume">
                             <Binding.ValidationRules>
                                 <rules:NumberValidationRule Min="0"/>
                             </Binding.ValidationRules>
                         </Binding>
                     </TextBox.Text>
                 </TextBox>
             </Grid>
            
            <TextBlock
                Style="{StaticResource HeaderThreeText}"
                Text="Загрузка"/>
            
            <local:RoutePointView
                DataContext="{Binding EditedViewModel.LoadPoint}"/>
            
            
        </StackPanel>
        
    </Grid>
</UserControl>
