<UserControl x:Class="LogistHelper.UI.Views.DocumentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:dtos="clr-namespace:DTOs;assembly=DTOs"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             xmlns:converters="clr-namespace:LogistHelper.UI.Converters"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             xmlns:pages="clr-namespace:LogistHelper.UI.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

    <UserControl.Resources>

        <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
        <converters:EvenNumberToBoolConverter x:Key="EvenNumberToBoolConverter"/>

        <ObjectDataProvider 
            x:Key="docDirect" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:DocumentDirection"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider 
            x:Key="resType" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:RecievingType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider 
            x:Key="docType" 
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dtos:DocumentType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Style="{StaticResource HeaderTwoText}"
            Text="Документы"/>

        <ItemsControl
            MaxWidth="1200"
            Grid.Row="1"
            ItemsSource="{Binding List}">

            <ItemsControl.Template>
                <ControlTemplate>
                    

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid
                            Margin="0 0 12 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="100"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition
                                    Width="50"/>
                                <ColumnDefinition
                                    Width="50"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="№"/>

                            <TextBlock
            Grid.Column="1"
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="Тип"/>

                            <TextBlock
            Grid.Column="2"
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="Номер и дата"/>

                            <TextBlock
            Grid.Column="3"
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="Направление"/>

                            <TextBlock
            Grid.Column="4"
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="Дата"/>

                            <TextBlock
            Grid.Column="5"
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="Вид"/>

                            <TextBlock
            Grid.Column="6"
            Style="{StaticResource HeaderThreeText}"
            Foreground="{StaticResource NeutralOneBrush}"
            Text="Сумма, руб"/>

                            <Button
            Grid.Column="8"
            Style="{StaticResource IconButton}"
            ToolTip="Добавить документ"
            Command="{Binding AddCommand}">
                                <Image
                Source="/UI/Icons/add_icon.png"/>
                            </Button>

                        </Grid>

                        <ScrollViewer
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Disabled"
                            Style="{StaticResource CustomScroll}">

                        

                            <ItemsPresenter
                                Grid.Row="1"/>

                        </ScrollViewer>

                    </Grid>
                   
                </ControlTemplate>
            </ItemsControl.Template>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="100"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition
                                Width="50"/>
                            <ColumnDefinition
                                Width="50"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Counter, Converter={StaticResource EvenNumberToBoolConverter}}" Value="True">
                                        <Setter Property="Grid.Background" Value="{StaticResource LightBlueBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <TextBlock
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center"
                            Text="{Binding Counter}"/>
                        
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center"
                            Text="{Binding Type, Converter={StaticResource EnumToDescriptionConverter}}"/>

                        <TextBlock
                            Grid.Column="2"
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center">
                            <Run Text="{Binding Number}"/>
                            <Run Text="от"/>
                            <Run Text="{Binding CreationDate, StringFormat='dd.MM.yyyy'}"/>
                        </TextBlock>
                        
                        <TextBlock
                            Grid.Column="3"
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center"
                            Text="{Binding Direction, Converter={StaticResource EnumToDescriptionConverter}}"/>
                        
                        <TextBlock
                            Grid.Column="4"
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center"
                            Text="{Binding RecievingDate, StringFormat='dd.MM.yyyy'}"/>
                        
                        <TextBlock
                            Grid.Column="5"
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center"
                            Text="{Binding RecieveType, Converter={StaticResource EnumToDescriptionConverter}}"/>
                        
                        <TextBlock
                            Grid.Column="6"
                            Style="{StaticResource DefaultText}"
                            TextAlignment="Center"
                            Text="{Binding Summ, StringFormat=n0}"/>

                        <Button
                            Grid.Column="7"
                            ToolTip="Редактировать"
                            Style="{StaticResource IconButton}"
                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:DocumentListView}, Path=DataContext.EditCommand}"
                            CommandParameter="{Binding Id}">
                            <Image
                                Source="/UI/Icons/edit_icon.png"/>
                        </Button>

                        <Button
                            Grid.Column="8"
                            ToolTip="Удалить"
                            Style="{StaticResource IconButton}"
                            Command="{Binding RelativeSource={RelativeSource AncestorType=local:DocumentListView}, Path=DataContext.DeleteCommand}"
                            CommandParameter="{Binding Id}">
                            <Image
                                Source="/UI/Icons/remove_icon.png"/>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

        </ItemsControl>

        <local:BlockView
            Grid.RowSpan="2"/>
    </Grid>
</UserControl>
