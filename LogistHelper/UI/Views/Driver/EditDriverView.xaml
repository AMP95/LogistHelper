<UserControl x:Class="LogistHelper.UI.Views.EditDriverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        
        <Grid
            MaxWidth="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button
                Style="{StaticResource IconButton}"
                HorizontalAlignment="Right"
                Content="Back"
                Command="{Binding BackCommand}"/>

            <StackPanel
                Grid.Row="1">
                
                <TextBlock
                Style="{StaticResource DefaultText}"
                Text="ФИО"/>

                <TextBox
                Style="{StaticResource SubLeftTextBox}">
                <TextBox.Text>
                    <Binding Path="EditedViewModel.Name">
                        <Binding.ValidationRules>
                            <rules:EmptyStringValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Style="{StaticResource MiniText}"
                    Text="Дата рождения"/>

                <DatePicker
                    Grid.Column="1"
                    SelectedDate="{Binding EditedViewModel.BirthDate}"
                    Style="{StaticResource CustomDatePickerStyle}"/>
                
            </Grid>

                <TextBlock
                Style="{StaticResource DefaultText}"
                Text="Паспорт"/>

                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock
                    Style="{StaticResource MiniText}"
                    Text="Серия и номер"/>

                <TextBox
                    Grid.Column="1"
                    Style="{StaticResource SubLeftTextBox}">
                    <TextBox.Text>
                        <Binding Path="EditedViewModel.PassportSerial">
                            <Binding.ValidationRules>
                                <rules:EmptyStringValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource MiniText}"
                    Text="Кем выдан"/>

                <Grid
                    Grid.Row="1"
                    Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Style="{StaticResource SubLeftTextBox}">
                        <TextBox.Text>
                            <Binding Path="EditedViewModel.PassportIssuer">
                                <Binding.ValidationRules>
                                    <rules:EmptyStringValidationRule/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <TextBlock
                        Grid.Column="1"
                        Style="{StaticResource MiniText}"
                        Text="Код"/>

                    <TextBox
                        Grid.Column="2"
                        Width="100"
                        Style="{StaticResource SubCentralTextBox}"
                        Text="{Binding IssuerCode}"/>

                    <Button
                        Grid.Column="3"
                        Style="{StaticResource IconButton}"
                        Command="{Binding SearchCommand}"
                        IsDefault="True"/>
                </Grid>

                

                <TextBlock
                    Grid.Row="2"
                    Style="{StaticResource MiniText}"
                    Text="Дата выдачи"/>

                <DatePicker
                    Grid.Row="2"
                    Grid.Column="1"
                    SelectedDate="{Binding EditedViewModel.PassportDate}"
                    Style="{StaticResource CustomDatePickerStyle}"/>
            </Grid>

                <TextBlock
                Style="{StaticResource DefaultText}"
                Text="Телефон"/>

                <ItemsControl
                ItemsSource="{Binding EditedViewModel.Phones}">
                <ItemsControl.Template>
                    <ControlTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Button
                                Style="{StaticResource IconButton}"
                                Content="Добавить"
                                HorizontalAlignment="Right"
                                Command="{Binding AddPhoneCommand}"/>

                            <ItemsPresenter
                                Grid.Row="1"/>
                        </Grid>
                    </ControlTemplate>
                </ItemsControl.Template>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox
                                Style="{StaticResource SubLeftTextBox}">
                                <TextBox.Text>
                                    <Binding Path="Item">
                                        <Binding.ValidationRules>
                                            <rules:PhoneValidationRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>

                            <Button
                                Grid.Column="1"
                                Style="{StaticResource IconButton}"
                                Command="{Binding RelativeSource={RelativeSource AncestorType=local:EditCompanyView}, Path=DataContext.DeletePhoneCommand}"
                                CommandParameter="{Binding Id}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

                <TextBlock
                    Style="{StaticResource DefaultText}"
                    Text="Перевозчик"/>

                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource CustomComboBox}"
                    ItemsSource="{Binding Carriers}"
                    SelectedItem="{Binding SelectedCarrier}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Style="{StaticResource DefaultText}">
                                <Run Text="{Binding TruckModel}"/>
                                <Run Text="{Binding TruckNumber}"/>
                                <Run Text="{Binding TrailerModel}"/>
                                <Run Text="{Binding TrailerNumber}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


                <TextBlock
                    Style="{StaticResource DefaultText}"
                    Text="ТС"/>

                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource CustomComboBox}"
                    ItemsSource="{Binding SelectedCarrier.Vehicles}"
                    SelectedItem="{Binding EditedViewModel.Vehicle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                Style="{StaticResource DefaultText}">
                                <Run Text="{Binding TruckModel}"/>
                                <Run Text="{Binding TruckNumber}"/>
                                <Run Text="{Binding TrailerModel}"/>
                                <Run Text="{Binding TrailerNumber}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </StackPanel>

            <Grid
                Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
                Style="{StaticResource AcceptButton}"
                Content="Сохранить"
                Command="{Binding SaveCommand}"/>

            <Button
                Grid.Column="1"
                Style="{StaticResource CancelButton}"
                Content="Отмена"
                Command="{Binding CancelCommand}"/>
        </Grid>

        </Grid>

        <local:BlockView/>

    </Grid>

</UserControl>
