<UserControl x:Class="LogistHelper.UI.Views.DatabaseMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel
        MaxWidth="800"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateClientMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/trailer_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Заказчики"/>
            </Grid>
        </Button>

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateCarrierMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/carrier_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Перевозчики"/>
            </Grid>
        </Button>

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateDriverMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/driver_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Водители"/>
            </Grid>
        </Button>

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateVehicleMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/vehicle_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="ТС"/>
            </Grid>
        </Button>

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateRoutesMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/route_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Маршруты"/>
            </Grid>
        </Button>
    </WrapPanel>

</UserControl>
