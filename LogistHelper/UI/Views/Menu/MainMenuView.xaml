<UserControl x:Class="LogistHelper.UI.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:services="clr-namespace:LogistHelper.Services"
             xmlns:dtos="clr-namespace:DTOs;assembly=DTOs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <WrapPanel
        MaxWidth="600"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">

        <Button
            x:Name="contractButton"
            Command="{Binding NewContractCommand}">

            <Button.Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MenuButton}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static services:LogistService.EnteredLogist}, Path=Role}" 
                         Value="{x:Static dtos:LogistRole.Admin}">
                            <Setter Property="Button.Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/contract_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Новая заявка"/>
            </Grid>
        </Button>
        
        <Button
            Visibility="{Binding ElementName=contractButton, Path=Visibility}"
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateContractsMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                    Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/contractlist_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Заявки"/>
            </Grid>
        </Button>
        
        <Button
            Visibility="{Binding ElementName=contractButton, Path=Visibility}"
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateBillsMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/cash_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Оплаты"/>
            </Grid>
        </Button>
        
        <Button
            Visibility="{Binding ElementName=contractButton, Path=Visibility}"
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateDatabaseMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/database_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="База"/>
            </Grid>
        </Button>

        <Button
            x:Name="adminButton"
            Command="{Binding NavigateAdminCommand}">

            <Button.Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MenuButton}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Source={x:Static services:LogistService.EnteredLogist}, Path=Role}" 
                                     Value="{x:Static dtos:LogistRole.User}">
                            <Setter Property="Button.Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/admin_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Администратор"/>
            </Grid>
        </Button>

        <Button
            Visibility="{Binding ElementName=adminButton,  Path=Visibility}"
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateSettingsCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/setting_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Настройки"/>
            </Grid>
        </Button>
    </WrapPanel>
</UserControl>
