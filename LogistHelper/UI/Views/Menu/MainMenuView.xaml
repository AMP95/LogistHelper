<UserControl x:Class="LogistHelper.UI.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel
        MaxWidth="800"
        VerticalAlignment="Center"
        HorizontalAlignment="Center">
        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NewContractCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/contract_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Новая заявка"/>
            </Grid>
        </Button>
        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateContractsMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                    Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/contractlist_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Заявки"/>
            </Grid>
        </Button>
        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateBillsMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/cash_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Оплаты"/>
            </Grid>
        </Button>
        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateDatabaseMenuCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/database_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="База"/>
            </Grid>
        </Button>

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateAdminCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/admin_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Администратор"/>
            </Grid>
        </Button>

        <Button
            Style="{StaticResource MenuButton}"
            Command="{Binding NavigateSettingsCommand}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition
                        Height="auto"/>
                </Grid.RowDefinitions>

                <Image
                    Source="/UI/Icons/setting_icon.png"
                    Height="100"/>
                <TextBlock
                    Grid.Row="1"
                    Style="{StaticResource HeaderTwoText}"
                    Text="Настройки"/>
            </Grid>
        </Button>
    </WrapPanel>
</UserControl>
