<UserControl x:Class="LogistHelper.UI.Views.EditVehicleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LogistHelper.UI.Views"
             xmlns:rules="clr-namespace:LogistHelper.UI.ValidationRules"
             xmlns:controls="clr-namespace:LogistHelper.UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock
            Grid.ColumnSpan="4"
            Style="{StaticResource DefaultText}"
            Text="Тягач"/>
        
        <TextBlock
            Grid.Row="1"
            Style="{StaticResource MiniText}"
            Text="Марка"/>

        <controls:SearchBox
            Grid.Row="1"
            Grid.Column="1"
            SearchText="{Binding SearchTruckString, Mode=OneWayToSource}"
            SearchCommand="{Binding SearchTruckBrandCommand}"
            SearchList="{Binding TruckBrands, Mode=TwoWay}"
            SelectedSearch="{Binding SelectedTruckBrand, Mode=TwoWay}"
            IsDynamicSearch="True"
            DisplayMemberPath="Item">
            <controls:SearchBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Style="{StaticResource DefaultText}"
                        Text="{Binding Item}"/>
                </DataTemplate>
            </controls:SearchBox.ItemTemplate>
        </controls:SearchBox>

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource MiniText}"
            Text="Номер"/>
        
        <TextBox
            Grid.Row="1"
            Grid.Column="3"
            Style="{StaticResource SubLeftTextBox}">
            <TextBox.Text>
                <Binding Path="EditedViewModel.TruckNumber">
                    <Binding.ValidationRules>
                        <rules:TruckNumberValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        
        <TextBlock
            Grid.Row="2"
            Grid.ColumnSpan="4"
            Style="{StaticResource DefaultText}"
            Text="Прицеп"/>
        
        <TextBlock
            Grid.Row="3"
            Style="{StaticResource MiniText}"
            Text="Марка"/>
        
        <controls:SearchBox
            Grid.Row="3"
            Grid.Column="1"
            SearchText="{Binding SearchTrailerString, Mode=OneWayToSource}"
            SearchCommand="{Binding SearchTrailerBrandCommand}"
            SearchList="{Binding TrailerBrands, Mode=TwoWay}"
            SelectedSearch="{Binding SelectedTrailerBrand, Mode=TwoWay}"
            IsDynamicSearch="True"
            DisplayMemberPath="Item">
            <controls:SearchBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Style="{StaticResource DefaultText}"
                        Text="{Binding Item}"/>
                </DataTemplate>
            </controls:SearchBox.ItemTemplate>
        </controls:SearchBox>
        
        <!--<TextBox
            Grid.Row="3"
            Grid.Column="1"
            Style="{StaticResource SubLeftTextBox}">
            <TextBox.Text>
                <Binding Path="EditedViewModel.TrailerModel">
                    <Binding.ValidationRules>
                        <rules:EmptyStringValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>-->
        
        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Style="{StaticResource MiniText}"
            Text="Номер"/>
        
        <TextBox
            Grid.Row="3"
            Grid.Column="3"
            Style="{StaticResource SubLeftTextBox}">
            <TextBox.Text>
                <Binding Path="EditedViewModel.TrailerNumber">
                    <Binding.ValidationRules>
                        <rules:TrailerNumberValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        
        <TextBlock
            Grid.Row="4"
            Grid.ColumnSpan="4"
            Style="{StaticResource DefaultText}"
            Text="Перевозчик"/>
        
        <controls:SearchBox
            Grid.Row="5"
            Grid.ColumnSpan="4"
            SearchCommand="{Binding SearchCarrierCommand}"
            SearchList="{Binding Carriers, Mode=TwoWay}"
            SelectedSearch="{Binding SelectedCarrier, Mode=TwoWay}"
            IsDynamicSearch="True"
            DisplayMemberPath="Name">
            <controls:SearchBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Style="{StaticResource DefaultText}"
                        Text="{Binding Name}"/>
                </DataTemplate>
            </controls:SearchBox.ItemTemplate>
        </controls:SearchBox>

    </Grid>
</UserControl>
